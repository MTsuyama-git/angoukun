<Window x:Class="angoukun.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:angoukun"
        mc:Ignorable="d"
        Closing="saveCache"
        Title="MainWindow" Height="480" Width="640">
  <DockPanel>
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="File">
        <MenuItem Header="Contacts" Click="OpenContacts">
        </MenuItem>
      </MenuItem>
    </Menu>
    <StackPanel Orientation="Vertical">
      <StackPanel Margin="0,30,0,0" Orientation="Horizontal">
                <Button Margin="50,0,50,0" Width="200px" Height="200px" Name="EncryptFolder" Click="OpenFolder">
                    <Image Width="200px"  Height="200px" Source="./Assets/EncryptFolder.png"/>
        </Button>
        <Button Margin="50,0,50,0" Width="200px" Height="200px" Click="OpenFile" Name="EncryptFile">
          <Image Source="./Assets/EncryptFile.png"/>
        </Button>
      </StackPanel>

      <Grid Margin="10,10,10,0">
	<Grid.ColumnDefinitions>
	  <ColumnDefinition Width="0.11*"/>
	  <ColumnDefinition Width="0.89*"/>
	</Grid.ColumnDefinitions>
    <Label HorizontalAlignment="Right">
          <AccessText Text="Target:" Grid.Column="0" ></AccessText>
	</Label>
    <Label Grid.Column="1" Background="GhostWhite">
          <AccessText Grid.Column="1" Background="GhostWhite" Margin="0,0,10,0" Name="FilePath" Text=""></AccessText>
    </Label>
      </Grid>
      <Grid Margin="10,10,10,0">
	<Grid.ColumnDefinitions>
	  <ColumnDefinition Width="0.11*"/>
	  <ColumnDefinition Width="0.89*"/>
	</Grid.ColumnDefinitions>
        <Label   HorizontalAlignment="Right">
          <AccessText Grid.Column="0" Text="Receipient:"></AccessText>
        </Label>
        <ComboBox Grid.Column="1" Margin="0,0,10,0" Name="contactList" DisplayMemberPath="FullName"></ComboBox>
      </Grid>
            <Grid Margin="10,10,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.8*"/>
                </Grid.ColumnDefinitions>
                <ProgressBar Grid.Column="0" x:Name="Progress0" Height="20px"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                    <Button Content="Encrypt" Click="ProceedEncrypt" Margin="0,0,10,0"/>
                    <Button Content="Clear" Click="ProceedClear" Margin="0,0,10,0"/>
                </StackPanel>
            </Grid>
        </StackPanel>

